<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/text_level"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбор локации:"
            android:textSize="30sp"
            android:layout_marginHorizontal="50dp"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@+id/text_level"
        android:layout_above="@+id/layout_map_back">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_gravity="center"
            android:paddingHorizontal="70dp">

            <TextView
                android:id="@+id/text_level_id_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textSize="25sp"
                android:elevation="2dp"
                android:background="@color/teal_200"/>
            <TextView
                android:id="@+id/text_level_id_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:textSize="25sp"
                android:elevation="2dp"
                android:background="@color/teal_200"/>
            <TextView
                android:id="@+id/text_level_id_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:textSize="25sp"
                android:elevation="2dp"
                android:background="@color/teal_200"/>
            <TextView
                android:id="@+id/text_level_id_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4"
                android:gravity="center"
                android:textSize="25sp"
                android:elevation="2dp"
                android:background="@color/teal_200"/>
            <TextView
                android:id="@+id/text_level_id_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5"
                android:gravity="center"
                android:textSize="25sp"
                android:elevation="2dp"
                android:background="@color/teal_200"/>
            <TextView
                android:id="@+id/text_level_id_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="6"
                android:gravity="center"
                android:textSize="25sp"
                android:elevation="2dp"
                android:background="@color/teal_200"/>
            <TextView
                android:id="@+id/text_level_id_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="7"
                android:gravity="center"
                android:textSize="25sp"
                android:elevation="2dp"
                android:background="@color/teal_200"/>
            <TextView
                android:id="@+id/text_level_id_85"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="8"
                android:gravity="center"
                android:textSize="25sp"
                android:elevation="2dp"
                android:background="@color/teal_200"/>

        </GridLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_map_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_map_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/btn_map_back"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>